<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="LATARKA" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MajsterAppV2.latarka">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Gray" Padding="60"  >
            <Image Source="dynamo.png" VerticalOptions="FillAndExpand"  />
            <Button Text="ON" BackgroundColor="Green" VerticalOptions="CenterAndExpand" CornerRadius="15" BorderColor="Black" BorderWidth="3" Clicked="PrzyciskON" >
            </Button>
            <Button Text="OFF" BackgroundColor="Red" VerticalOptions="CenterAndExpand" CornerRadius="15" BorderColor="Black" BorderWidth="3" Clicked="PrzyciskOFF" >
            </Button>
            <Button Text="Powrót do menu" BackgroundColor="LightGray" VerticalOptions="End" Clicked="NavigateButton_OnClicked" TextTransform="Lowercase">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>